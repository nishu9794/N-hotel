<% layout('/layout/boilerplate.ejs') %>
<% if (success&& success.length) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
<% if (error&& error.length) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
<body>
  <div class="container-fuild mt-5">
    

    <div class="row">
      <% for (let h of listing) { %>
        <div class="col-lg-4 col-md-6 mb-6">
          <a href="/show/<%= h._id %>" class="text-decoration-none text-dark">
            <div class="card h-100 shadow-sm border-0 hover-shadow">
              <img src="<%= h.img %>" class="card-img-top" alt="Room image" style="height: 200px; object-fit: cover;">
              <div class="card-body">
                <h5 class="card-title fw-semibold"><%= h.title %></h5>
                 <h5 class="card-title fw-semibold">â‚¹<%= h.price %></h5>
                <p class="card-text text-muted"><%= h.description.length > 100 ? h.description.substring(0, 100) + '...' : h.description %></p>
              </div>
            </div>
          </a>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Optional: Bootstrap Icons CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Optional: Custom hover effect -->
  <style>
    .hover-shadow:hover {
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15) !important;
      transform: translateY(-2px);
      transition: 0.3s ease-in-out;
    }
  </style>
 <style>
    .profile-img {
      width: 100%;
      height: auto;
      border-radius: 10px;
    }
    .about-text {
      display: flex;
      flex-direction: column;
      justify-content: center;
      height: 100%;
    }
  </style>
   <div class="container mt-5">
    <div class="row">
      
      <!-- Image Column -->
      <div class="col-lg-4 col-md-6 col-sm-6 ">
        <img src="/img/jjk.jpg" alt="Profile Image"  class="profile-img shadow h-100 w-50">
      </div>

      <!-- Text Column -->
      <div class="col-lg-8 col-md-6 col-sm-6 about-text">
        <h2 class="text-primary text-center mb-3">About Me</h2>
        <p class="lead text-center">
          I am an MCA student and a passionate Full Stack Web Developer. I have built many projects using technologies like HTML, CSS, JavaScript, Node.js, MongoDB, and more. I love creating responsive and user-friendly web applications.
        </p>
      </div>

    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

